{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    // "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    "incremental": true,
    "skipLibCheck": true
  },
  "exclude": ["*.test.ts", "*.spec.ts"]
}